{% extends "base.twig" %}

{% block title %}Ticket Management - TicketFlow{% endblock %}

{% block content %}
<div class="min-h-screen bg-linear-to-br from-blue-50 to-indigo-50">
    <nav class="bg-white shadow-sm relative z-50">
        <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex items-center gap-2">
                    <div class="bg-linear-to-br from-blue-600 to-purple-600 p-2 rounded-lg">
                        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                                  d="M15 5v2m0 4v2m0 4v2M5 5a2 2 0 00-2 2v3a2 2 0 110 4v3a2 2 0 002 2h14a2 2 0 002-2v-3a2 2 0 110-4V7a2 2 0 00-2-2H5z"/>
                        </svg>
                    </div>
                    <span class="text-2xl font-bold bg-linear-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                        TicketFlow
                    </span>
                </div>

                <!-- Desktop Menu -->
                <div class="hidden md:flex items-center gap-4">
                    <a href="index.php?page=dashboard"
                       class="px-3 py-2 text-gray-700 font-medium hover:text-blue-600 transition-all duration-300 hover:scale-105">
                        Dashboard
                    </a>
                    <form method="POST" action="index.php?action=logout" class="inline">
                        <button type="submit"
                            class="flex items-center gap-2 px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 transition-all duration-300 hover:scale-105 transform font-semibold">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                      d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                            </svg>
                            Logout
                        </button>
                    </form>
                </div>

                <!-- Mobile Hamburger -->
                <button id="mobile-menu-button" class="md:hidden p-2 rounded-lg text-gray-600 hover:bg-gray-100 focus:outline-none">
                    <svg id="menu-open" class="w-6 h-6 block" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M4 6h16M4 12h16M4 18h16"/>
                    </svg>
                    <svg id="menu-close" class="w-6 h-6 hidden" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                              d="M6 18L18 6M6 6l12 12"/>
                    </svg>
                </button>
            </div>
        </div>

        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden bg-white border-t border-gray-200">
            <div class="px-4 py-3 space-y-3">
                <a href="index.php?page=dashboard"
                   class="block px-3 py-2 rounded-lg text-gray-700 font-medium hover:bg-gray-100 hover:text-blue-600">
                    Dashboard
                </a>
                <form method="POST" action="index.php?action=logout" class="block">
                    <button type="submit"
                        class="w-full flex items-center justify-center gap-2 px-4 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 font-semibold transition-all duration-300">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                  d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"/>
                        </svg>
                        Logout
                    </button>
                </form>
            </div>
        </div>
    </nav>

    <div class="max-w-[1440px] mx-auto px-4 sm:px-6 lg:px-8 py-8">
        <div class="flex flex-col sm:flex-row justify-between items-center gap-4 sm:gap-0 mb-8 text-center sm:text-left">
  <h2 class="text-2xl sm:text-3xl font-bold text-gray-800">
    Ticket Management
  </h2>

  <a href="index.php?page=tickets&new=1"
     class="flex items-center justify-center gap-2 px-5 sm:px-6 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:shadow-lg transition-all duration-300 hover:scale-105 transform font-semibold w-full sm:w-auto">
    <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M12 4v16m8-8H4"/>
    </svg>
    Create Ticket
  </a>
</div>


        {% if showForm %}
        <div class="bg-white rounded-xl shadow-lg p-8 mb-8">
            <h3 class="text-2xl font-bold mb-6 text-gray-800">
                {% if editTicket %}Edit Ticket{% else %}Create New Ticket{% endif %}
            </h3>
            <form method="POST" action="index.php?action={% if editTicket %}update_ticket{% else %}create_ticket{% endif %}" class="space-y-4">
                {% if editTicket %}
                <input type="hidden" name="id" value="{{ editTicket.id }}">
                {% endif %}

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">
                        Title <span class="text-red-500">*</span>
                    </label>
                    <input type="text" name="title" required 
                        value="{% if editTicket %}{{ editTicket.title }}{% endif %}"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                </div>

                <div>
                    <label class="block text-sm font-medium text-gray-700 mb-1">Description</label>
                    <textarea name="description" rows="4"
                        class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">{% if editTicket %}{{ editTicket.description }}{% endif %}</textarea>
                </div>

                <div class="grid md:grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">
                            Status <span class="text-red-500">*</span>
                        </label>
                        <select name="status" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                            <option value="open" {% if editTicket and editTicket.status == 'open' %}selected{% endif %}>Open</option>
                            <option value="in_progress" {% if editTicket and editTicket.status == 'in_progress' %}selected{% endif %}>In Progress</option>
                            <option value="closed" {% if editTicket and editTicket.status == 'closed' %}selected{% endif %}>Closed</option>
                        </select>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-1">Priority</label>
                        <select name="priority"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-indigo-500 focus:border-transparent">
                            <option value="low" {% if editTicket and editTicket.priority == 'low' %}selected{% endif %}>Low</option>
                            <option value="medium" {% if editTicket and editTicket.priority == 'medium' %}selected{% elseif not editTicket %}selected{% endif %}>Medium</option>
                            <option value="high" {% if editTicket and editTicket.priority == 'high' %}selected{% endif %}>High</option>
                        </select>
                    </div>
                </div>

                <div class="flex gap-4">
                    <button type="submit" 
                        class="px-6 py-3 bg-linear-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:shadow-lg transition-all duration-300 hover:scale-105 transform font-semibold">
                        {% if editTicket %}Update Ticket{% else %}Create Ticket{% endif %}
                    </button>
                    <a href="index.php?page=tickets" 
                        class="px-6 py-3 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-semibold inline-block">
                        Cancel
                    </a>
                </div>
            </form>
        </div>
        {% endif %}

        {% if tickets|length == 0 %}
        <div class="bg-white rounded-xl shadow-lg p-12 text-center">
            <p class="text-gray-500 text-lg">No tickets yet. Create your first ticket to get started!</p>
        </div>
        {% else %}
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {% for ticket in tickets %}
            <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-shadow">
                <div class="flex justify-between items-start mb-4">
                    <h4 class="text-xl font-bold text-gray-800 flex-1">{{ ticket.title }}</h4>
                    <span class="px-3 py-1 rounded-full text-xs font-semibold 
                        {% if ticket.status == 'open' %}bg-green-100 text-green-700
                        {% elseif ticket.status == 'in_progress' %}bg-amber-100 text-amber-700
                        {% else %}bg-gray-100 text-gray-700{% endif %}">
                        {% if ticket.status == 'in_progress' %}In Progress
                        {% else %}{{ ticket.status|capitalize }}{% endif %}
                    </span>
                </div>

                {% if ticket.description %}
                <p class="text-gray-600 mb-4 line-clamp-3">{{ ticket.description }}</p>
                {% endif %}

                <div class="flex items-center justify-between pt-4 border-t">
                    <span class="text-sm text-gray-500">Priority: {{ ticket.priority|capitalize }}</span>
                    <div class="flex gap-2">
                        <a href="index.php?page=tickets&edit={{ ticket.id }}" 
                            class="p-2 bg-blue-100 text-blue-600 rounded-lg hover:bg-blue-200">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                            </svg>
                        </a>
                        <button onclick="openDeleteModal('{{ ticket.id }}')" 
                            class="p-2 bg-red-100 text-red-600 rounded-lg hover:bg-red-200">
                            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                            </svg>
                        </button>
                        <form id="delete-form-{{ ticket.id }}" method="POST" action="index.php?action=delete_ticket" class="hidden">
                            <input type="hidden" name="id" value="{{ ticket.id }}">
                        </form>
                    </div>
                </div>
            </div>
            {% endfor %}
        </div>
        {% endif %}
    </div>

    <!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 px-4 hidden">
  <div class="bg-white rounded-xl shadow-2xl p-8 max-w-md w-full">
    <h3 class="text-2xl font-bold mb-4 text-gray-800">Confirm Delete</h3>
    <p class="text-gray-600 mb-6">
      Are you sure you want to delete this ticket? This action cannot be undone.
    </p>
    <div class="flex gap-4">
      <button id="confirmDeleteBtn"
        class="flex-1 px-6 py-2 bg-red-500 text-white rounded-lg hover:bg-red-600 font-semibold transition-all duration-300 hover:scale-105 transform">
        Delete
      </button>
      <button id="cancelDeleteBtn"
        class="flex-1 px-6 py-2 bg-gray-200 text-gray-700 rounded-lg hover:bg-gray-300 font-semibold">
        Cancel
      </button>
    </div>
  </div>

</div>

<script>
  let deleteTicketId = null;
   const menuButton = document.getElementById('mobile-menu-button');
    const mobileMenu = document.getElementById('mobile-menu');
    const openIcon = document.getElementById('menu-open');
    const closeIcon = document.getElementById('menu-close');

    menuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
        openIcon.classList.toggle('hidden');
        closeIcon.classList.toggle('hidden');
    });

  function openDeleteModal(id) {
    deleteTicketId = id;
    document.getElementById('deleteModal').classList.remove('hidden');
  }

  document.getElementById('cancelDeleteBtn').addEventListener('click', function () {
    document.getElementById('deleteModal').classList.add('hidden');
    deleteTicketId = null;
  });

  document.getElementById('confirmDeleteBtn').addEventListener('click', function () {
    if (deleteTicketId) {
      document.getElementById('delete-form-' + deleteTicketId).submit();
      document.getElementById('deleteModal').classList.add('hidden');
      deleteTicketId = null;
    }
  });
</script>


    {% include "footer.twig" %}
</div>
{% endblock %}